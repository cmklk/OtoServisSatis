@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Araç Satış Servis Uygulaması</title>
    <link rel="stylesheet" href="~/Arac_Satis_Servis_On_Yuz/style.css">
    <link rel="stylesheet" href="~/Arac_Satis_Servis_On_Yuz/contact.css" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css" />

    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />

    <script src="https://unpkg.com/scrollreveal"></script>
</head>
<body>
    <section class="information">
        <div class="container">
            <div class="information_wrapper">
                <div class="information_tel">
                    <p class="tel">
                        <span>İZZET EREN ACAR</span>
                    </p>
                </div>
                <div class="information_email">
                    <div class="email_area">
                        <p class="emaill">
                            CEM KALKAN
                        </p>
                    </div>
                </div>

                <div class="login">
                    <a href="/Admin/Login/Index" class="btn btn-primary">Giriş Yap <i class="bi bi-box-arrow-in-right"></i></a>
                </div>
            </div>
        </div>
    </section>

    <section class="menu">
        <div class="container">
            <div class="menu_wrapper">
                <h4 class="logo">Vehicle Sales & ServicePro</h4>
                <nav class="menu_list">
                    <div id="menu_close">
                        <i class="bi bi-x-square"></i>
                    </div>
                    <ul class="menu_area">
                        <li class="menu-item">
                            <a href="/Slider/SliderList" class="menu-link">
                                ANASAYFA
                            </a>
                        </li>

                        <li class="menu-item">
                            <a href="/Arac/AracListesi" class="menu-link">
                                ARAÇLAR
                            </a>

                        </li>

                        <li class="menu-item">
                            <a href="/Arac/IletisimForm" class="menu-link">
                                İLETİŞİM
                            </a>
                        </li>
                    </ul>
                </nav>


                <div id="hamburger_menu">
                    <i class="bi bi-list"></i>
                </div>
            </div>


        </div>

    </section>
    <div class="container-fluid">
        @RenderBody()
    </div>
    <footer class="bg-dark py-3">
        <h3 class="footer-title text-white fs-5 text-center p-4 mb-3">Vehicle Sales & ServicePro</h3>
        <p class="text-center text-secondary p-1">Tüm Hakları Saklıdır. &copy;@DateTime.Now.Year</p>
        <h3 class="text-center my-2 text-white">İLETİŞİM</h3>
        <p class="text-center text-white my-2"> Telefon : 0532 333 33 33</p>
        <p class="text-center text-white "> Telefon : 0533 333 33 33</p>
    </footer>

    <script src="~/Arac_Satis_Servis_On_Yuz/main.js"></script>
    <!--!swiper js link-->
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>

    <!--! bootstrap js link-->

    <script>
        /*! swiper js code*/

        var swiper = new Swiper(".mySwiper", {
            cssMode: true,
            navigation: {
                nextEl: ".swiper-button-next",
                prevEl: ".swiper-button-prev",
            },
            pagination: {
                el: ".swiper-pagination",
            },
            mousewheel: true,
            keyboard: true,
        });
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("Notyf")
</body>
</html>

