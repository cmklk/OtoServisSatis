@model Arac
@{
    ViewData["Title"] = "aracAra";
    Layout = "~/Views/Shared/OtoServisSatisUILayout.cshtml";
}


<section class="cars-list my-3">
    <div class="container">
        <div class="row">
          
                <div class="col-lg-3 col-md-6 col-sm-12 h-auto">
                    <div class="card h-100">
                    <img src="/Img/@Model.Resim1" class="card-img-top">
                        <div class="card-body d-flex justify-content-between align-items-center  ">
                            <div class="card-info">
                            <div class="card-title"><h6 class="text-danger" style="font-size: 13px;">- @Model.Model</h6></div>
                                <div class="card-text"><h6 class="text-secondary" style="font-size: 13px;">Alt Başlık Eklenecek</h6></div>
                            </div>

                            <div class="card-price">
                            <h4 class="text-danger" style="font-size: 15px;">@Model.Fiyat <span>₺</span></h4>
                            </div>

                        </div>

                        <div class="list-group ">
                            <div class="container">
                                <div class="row list-group-flush">
                                <li class="list-group-item col-6 text-secondary " style="border-bottom: 1px solid #b7b7b7; font-size: 15px;"><i class="bi bi-calendar-date"></i> : <span>@Model.ModelYil</span></li>
                                <li class="list-group-item  col-6 text-secondary" style="border-bottom: 1px solid #b7b7b7; font-size: 15px;"><i class="bi bi-speedometer"></i>  :  <span>@Model.Kilometre<span>Km</span></span></li>
                                </div>

                                <div class="row list-group-flush">
                                <li class="list-group-item col-6 text-secondary " style="font-size: 14px;"><i class="bi bi-fuel-pump-diesel"></i> : <span>@Model.Yakit</span></li>
                                <li class="list-group-item  col-6 text-secondary" style="font-size: 14px;"> <i class="bi bi-info-circle"></i> : <span>@Model.Vites</span></li>
                                </div>

                            </div>
                        <a href="/Arac/AracDetay/@Model.Id" class="btn btn-primary">İncele</a>
                        </div>

                    </div>

                </div>

            


        </div>
    </div>
</section>