@model List<Arac>
@{
    ViewData["Title"] = "AracListesi";
    Layout = "~/Views/Shared/OtoServisSatisUILayout.cshtml";
}


<section class="cars-list my-3">
    <div class="container">
        <div class="row my-3 d-flex justify-content-center">
            <div class="col-lg-6 ">
                <div class="user_informaiton ">
                    <form method="get" class="d-flex form-area" asp-action="aracAra" asp-controller="Arac">
                        <input type="text" name="modelname" class="form-control" placeholder="Model Ara">
                        <input type="submit" class="btn btn-primary" value="Ara">
                    </form>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 col-sm-12 h-auto animate-top">
                <div class="card h-100">
                <img src="/Img/@item.Resim1" class="card-img-top">
                <div class="card-body d-flex justify-content-between align-items-center  ">
                <div class="card-info">
                <div class="card-title"><h6 class="text-danger" style="font-size: 13px;">  - @item.Model</h6></div>
                <div class="card-text"><h6 class="text-secondary" style="font-size: 13px;">Alt Başlık Eklenecek</h6></div>
                </div>
                <div class="card-price">
                <h4 class="text-danger" style="font-size: 15px;">@item.Fiyat <span>₺</span></h4>
                </div>
                </div>
                <div class="list-group ">
                <div class="container">
                <div class="row list-group-flush">
                <li class="list-group-item col-6 text-secondary " style="border-bottom: 1px solid #b7b7b7; font-size: 15px;"><i class="bi bi-calendar-date"></i> : <span>@item.ModelYil</span></li>
                <li class="list-group-item  col-6 text-secondary" style="border-bottom: 1px solid #b7b7b7; font-size: 15px;"><i class="bi bi-speedometer"></i>  :  <span>@item.Kilometre<span>Km</span>
                </span></li>
                </div>
                <div class="row list-group-flush">
                <li class="list-group-item col-6 text-secondary " style="font-size: 14px;"><i class="bi bi-fuel-pump-diesel"></i> : <span>@item.Yakit</span></li>
                <li class="list-group-item  col-6 text-secondary" style="font-size: 14px;"> <i class="bi bi-info-circle"></i> : <span>@item.Vites</span></li>
                </div>
                </div>
                <a href="/Arac/AracDetay/@item.Id" class="btn btn-primary">İncele</a>
                </div>
                </div>
                </div>
            }
           </div>
           </div>
           </section>