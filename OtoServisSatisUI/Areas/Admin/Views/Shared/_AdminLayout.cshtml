<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vehicle Sales & Service Pro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="~/Admin/styles.css" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <div class="bg-dark" id="sidebar-wrapper">
            <h5 class="text-white text-center my-2">Vehicle Sales <br /> & <br />ServicePro</h5>
            <div class="list-group list-group-flush my-3">
                <a href="/Admin/Marka/Index" class="list-group-item list-group-item-action bg-dark text-white active">
                    <i class="fas fa-tachometer-alt me-2"></i>Markalar
                </a>
                <a href="/Admin/Kullanici/Index" class="list-group-item list-group-item-action bg-dark text-white fw-bold">
                    <i class="fas fa-project-diagram me-2"></i>Kullanıcılar
                </a>
                <a href="/Admin/Arac/Index" class="list-group-item list-group-item-action bg-dark text-white fw-bold">
                    <i class="fas fa-chart-line me-2"></i>Araçlar
                </a>
                <a href="/Admin/Musteri/Index" class="list-group-item list-group-item-action bg-dark text-white fw-bold">
                    <i class="fas fa-paperclip me-2"></i>Müşteriler
                </a>
                <a href="/Admin/Roles/Index" class="list-group-item list-group-item-action bg-dark text-white fw-bold">
                    <i class="fas fa-shopping-cart me-2"></i>Roller
                </a>
                <a href="/Admin/Satis/Index" class="list-group-item list-group-item-action bg-dark text-white fw-bold">
                    <i class="fas fa-gift me-2"></i>Satışlar
                </a>
                <a href="/Admin/Servis/Index" class="list-group-item list-group-item-action bg-dark text-white fw-bold">
                    <i class="bi bi-question-square-fill me-2"></i>Servis
                </a>

                <a href="/Admin/BilgiAl/Index" class="list-group-item list-group-item-action bg-dark text-white fw-bold">
                    <i class="bi bi-telephone me-2"></i>Bilgi Al Mesajları
                </a>

                <a href="/Admin/Iletisim/Index" class="list-group-item list-group-item-action bg-dark text-white fw-bold">
                    <i class="bi bi-ui-checks me-2"></i>İletişim Mesajları
                </a>

                <a href="/Admin/Statistic/Index" class="list-group-item list-group-item-action bg-dark text-white fw-bold">
                    <i class="bi bi-card-checklist me-2"></i>İstatistik
                </a>

                <a href="/Admin/Slider/Index" class="list-group-item list-group-item-action bg-dark text-white fw-bold">
                    <i class="bi bi-file-image me-2"></i>Slider
                </a>

                <a href="/Admin/Login/Logout" class="list-group-item list-group-item-action bg-dark text-white fw-bold">
                    <i class="bi bi-box-arrow-left me-2"></i>Çıkış Yap
                </a>
              
            </div>
        </div>
        
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-4 px-4">
                <div class="d-flex align-items-center">
                    <i class="fas fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
                 
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

              
            </nav>

            <div class="container-fluid px-4">
                @RenderBody()
            </div>
        </div>
    </div>
    </div>


    <script type="text/javascript">
        var wrap = document.getElementById("wrapper");
        var toggleButton = document.getElementById("menu-toggle");

        toggleButton.onclick = function () {
            wrap.classList.toggle("toggled");
        };
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    @await RenderSectionAsync("Scripts", required: false)
    @await Component.InvokeAsync("Notyf")
   
    
</body>
</html>
