@model OtoServisSatis.Entities.Rol

@{
    ViewData["Title"] = "Create";
}


<div class="row d-flex; ">
    <div class="col-md-8 ">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Adi" class="control-label"></label>
                <input asp-for="Adi" class="form-control" />
                <span asp-validation-for="Adi" class="text-danger"></span>
            </div>
            <div class="form-group my-2">
                <input type="submit" value="Yeni Rolü Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger my-2">Geri Dön</a>
</div>

