@model IEnumerable<OtoServisSatis.Entities.Servis>

@{
    ViewData["Title"] = "Index";
}

<h3 class="my-3 text-danger">Servis Listesi</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(model => model.ServisGelisTarihi) </th>
            <th>@Html.DisplayNameFor(model => model.AracSorunu)</th>
            <th> @Html.DisplayNameFor(model => model.ServisUcreti)</th>
            <th> @Html.DisplayNameFor(model => model.ServisCikisTarihi) </th>
            <th>@Html.DisplayNameFor(model => model.YapilanIslemler) </th>
            <th> @Html.DisplayNameFor(model => model.GarantiKapsamidaMi)</th>
            <th>@Html.DisplayNameFor(model => model.AracPlaka)</th>
            <th> @Html.DisplayNameFor(model => model.Marka)</th>
            <th>@Html.DisplayNameFor(model => model.Model)</th>
            <th> @Html.DisplayNameFor(model => model.KasaTipi)</th>
            <th>@Html.DisplayNameFor(model => model.SaseNo)</th>
            <th> @Html.DisplayNameFor(model => model.Notlar)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>  @Html.DisplayFor(modelItem => item.ServisGelisTarihi) </td>
            <td> @Html.DisplayFor(modelItem => item.AracSorunu) </td>
            <td> @Html.DisplayFor(modelItem => item.ServisUcreti) </td>
            <td>@Html.DisplayFor(modelItem => item.ServisCikisTarihi)</td>
            <td>  @Html.DisplayFor(modelItem => item.YapilanIslemler)  </td>
            <td> @Html.DisplayFor(modelItem => item.GarantiKapsamidaMi)</td>
            <td> @Html.DisplayFor(modelItem => item.AracPlaka) </td>
            <td>@Html.DisplayFor(modelItem => item.Marka) </td>
            <td> @Html.DisplayFor(modelItem => item.Model)</td>
            <td> @Html.DisplayFor(modelItem => item.KasaTipi)</td>
            <td> @Html.DisplayFor(modelItem => item.SaseNo)</td>
            <td>@Html.DisplayFor(modelItem => item.Notlar)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Düzenle <i class="bi bi-pencil"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil <i class="bi bi-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Yeni Servis Kaydı Ekle <i class="bi bi-pencil"></i></a>