@model OtoServisSatis.Entities.Satis

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-md-8">
        <h3 class="my-3 text-danger">Yeni Satış Güncelleme Paneli</h3>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="AracId" class="control-label"></label>
                <select asp-for="AracId" class="form-control" asp-items="ViewBag.AracId"></select>
                <span asp-validation-for="AracId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MusteriId" class="control-label"></label>
                <select asp-for="MusteriId" class="form-control" asp-items="ViewBag.MusteriId"></select>
                <span asp-validation-for="MusteriId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SatisFiyati" class="control-label"></label>
                <input asp-for="SatisFiyati" class="form-control" />
                <span asp-validation-for="SatisFiyati" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SatisTarihi" class="control-label"></label>
                <input asp-for="SatisTarihi" class="form-control" />
                <span asp-validation-for="SatisTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Satış Bilgilerini Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">Geri Dön</a>
</div>

